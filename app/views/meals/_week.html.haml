.row-fluid.offset3.date
  - week.each do |date|
    - klass = 'today' if date == @today
    .span1{ :class => klass }
      = nice_print(date)
.row-fluid.offset3
  - week.each do |date|
    - klass = 'today' if date == @today
    .span1{ :class => klass }
      - meal = @meals[date]
      - if meal
        = meal.name
      - else
        = link_to 'New', new_meal_path
